<header>
  <%= link_to 'Back To All Bands', bands_url, method: :get %>
</header>

<h2> <%= @album.name %>  </h2>

<br>
<b>Tracks</b>
<br>
<br>

<% @album.tracks.each do |track| %>
  <%= link_to track.name, track_url(track) %><br>
<% end %>
<br>
<br>

<b>Links</b>
<br>
<ul>
  <li>
    <%= link_to 'New Track', new_album_track_url(@album), method: :get %>
  </li>
  <li>
    <%= link_to 'Edit Album', edit_album_url(@album), method: :get %>
  </li>
  <li>
    <%= link_to 'Delete Album', album_url(@album), method: :delete %>
  </li>
</ul>
